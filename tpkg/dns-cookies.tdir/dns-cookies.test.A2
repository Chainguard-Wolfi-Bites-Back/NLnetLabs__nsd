# #-- dns-cookies.pre--#
# source the master var file when it's there
[ -f ../.tpkg.var.master ] && source ../.tpkg.var.master
# use .tpkg.var.test for in test variable passing
[ -f .tpkg.var.test ] && source .tpkg.var.test
. ../common.sh

# set environment interfaces
ip address add 198.51.100.100 dev lo
ip link set dev lo up

# set NSD environment variables
get_random_port 3
TPKG_PRI_PORT=$RND_PORT
TPKG_SEC_PORT=`expr $TPKG_PRI_PORT + 1`
TPKG_CTRL_PORT=`expr $TPKG_PRI_PORT + 2`

PRE="../.."
TPKG_NSD_PRI_PID="nsd.pri.pid.$$"
TPKG_NSD_SEC_PID="nsd.sec.pid.$$"
TPKG_NSD="$PRE/nsd"

# start nsd with faketime
TZ=UTC faketime -f '2019-06-05 11:33:05' $TPKG_NSD -c dns-cookies.test.conf -P $TPKG_NSD_PRI_PID &

echo "faketime nsd instance A2 running"

sleep 1

dig -b 198.51.100.100 @198.51.100.100 +cookie=2464c4abcf10c957010000005cf79f111f8130c3eee29480 > dig.output.a2

if [ ! -z "$TPKG_NSD_PRI_PID" ]; then
	# kill NSD
	NSD_PRI_PID=`cat $TPKG_NSD_PRI_PID`
	kill_pid $NSD_PRI_PID
fi

if grep -q "2464c4abcf10c957010000005cf7a871d4a564a1442aca77" dig.output.a2
then
	echo "A.2. Learning a New Server Cookie: Cookie matches"
	exit 0
else
	echo "A.2. Learning a New Server Cookie: Cookie does not match"
	exit 1
fi
